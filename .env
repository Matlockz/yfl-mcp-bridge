# .env — YFL Drive Bridge (server side)

# Service
PORT=5050
BRIDGE_VERSION=3.4.5

# Auth
BRIDGE_TOKEN=v3c3NJQ4i94

# GAS backend (Apps Script “/exec” URL for Code.gs you deployed)
GAS_BASE_URL=https://script.google.com/macros/s/REPLACE_WITH_EXEC_ID/exec
# If you protect GAS with a lightweight key, set it; otherwise leave blank
GAS_KEY=

# CORS allow-list (comma-separated). NOTE: server emits ONE origin per request.
ALLOW_ORIGINS=http://localhost:6274,https://bridge.yfl-bridge.com,https://bridge.yflbridge.work

# Preflight headers and verbs (Inspector needs these)
ALLOW_HEADERS=content-type,x-bridge-token,x-custom-auth-headers,authorization,x-mcp-auth
ALLOW_METHODS=GET,POST,HEAD,OPTIONS
